{
    "compilerOptions": {
        "target": "ES2020",
        "rootDir": ".",
        "outDir": "./dist/",
        "module": "CommonJS",
        "declaration": false,
        "noImplicitAny": true,
        "removeComments": true,
        "moduleResolution": "node",
        "allowJs": true,
        "sourceMap": false,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "types": ["node"],
        "lib": ["ES2020"]
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "./dist/**"
    ]
}